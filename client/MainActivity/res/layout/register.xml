<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:background="#772432"
     android:orientation="vertical"
     android:paddingTop="30dp"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     android:paddingBottom="10dp">
<ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="90dp"
         android:layout_gravity="center"
         android:layout_marginTop="10dp"
      
         android:src="@drawable/logo_big" />
     
     
<ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">    
        
          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="15dp"
              android:background="@drawable/linearlayoutcurve"
              android:orientation="vertical"
              android:padding="10dp" >

       <TextView
           android:id="@+id/textViewLogin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="3dp"
           android:gravity="center_horizontal"
           android:paddingLeft="12dp"
           android:text="Register"
           android:textColor="#772432"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textSize="25dp" />
      
       <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView1"
             android:gravity="left"
             android:text="    CLIENT REGISTER"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#004165" />

    

       <TextView
           android:id="@+id/LINE"
           android:layout_width="wrap_content"
           android:layout_height="5dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/textView2"
           android:drawableBottom="@drawable/line"
           android:textColor="#FF0000" />

    

       <EditText
           android:id="@+id/clientName"
           android:layout_width="match_parent"
         android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="20dp"
           android:background="@drawable/shape"
             android:textColor="#772432"
             
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
   android:inputType="textCapWords|textPersonName"
   	       android:drawableLeft="@drawable/name"
           android:ems="10"
           android:hint="  Name"
          android:layout_weight="1"
            android:paddingRight="45dp"
          />
       
       <EditText
           android:id="@+id/jobposition"
           android:layout_width="match_parent"
          android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
                  android:drawableLeft="@drawable/job"
            android:ellipsize="end"
              android:paddingRight="45dp"
   	android:gravity="center"
   	  android:textColor="#772432"
   	android:paddingLeft="8dp"

           android:ems="10"
           android:hint=" Job Position"
          android:layout_weight="1"
          />
 <EditText
             android:id="@+id/Password"
             android:layout_width="match_parent"
             android:layout_height="45dp"
                 android:textColor="#772432"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/editText1"
             android:layout_marginTop="10dp"
             android:background="@drawable/shape"
             android:ellipsize="end"
              android:drawableLeft="@drawable/password"
             android:ems="10"
             android:gravity="center"
           
             android:hint=" Password"
             android:inputType="textPassword"
             android:paddingLeft="8dp"
             android:paddingRight="45dp" />
       <Button
             android:id="@+id/NextButton"
             android:layout_width="fill_parent"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:layout_marginTop="24dp"
             android:layout_weight="0.51"
             android:background="#004165"
             android:text="NEXT"
             android:textColor="#FFFFFF"
             android:textSize="18sp" 
             android:layout_marginBottom="60dp"/>
       </LinearLayout>
</ScrollView>
   </LinearLayout>
    
    
 
  
   