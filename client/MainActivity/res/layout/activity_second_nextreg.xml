<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#772432"
     android:orientation="vertical"
     android:paddingTop="10dp"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     android:paddingBottom="10dp">

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="90dp"
         android:layout_gravity="center"
         android:layout_marginTop="5dp"
      
         android:src="@drawable/logo_big" />
     
<ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">    
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="400dp"
         android:layout_marginBottom="10dp"
         android:layout_marginTop="10dp"
         android:background="@drawable/linearlayoutcurve"
         android:orientation="vertical"
         android:padding="10dp" >
         
         	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:layout_marginTop="2dp"
    	    android:background="@drawable/linearlayoutcurve"
    	    android:orientation="horizontal"
    	    android:padding="10dp" >

    	    <TextView
    	        android:id="@+id/LINE"
    	        android:layout_width="60dp"
    	        android:layout_height="5dp"
    	        android:layout_alignParentLeft="true"
    	        android:layout_below="@+id/textView2"
    	        android:layout_weight="5.29"
    	        android:drawableBottom="@drawable/line"
    	        android:textColor="#FF0000" />

    	    <TextView
    	        android:id="@+id/contactdetail"
    	        android:layout_width="wrap_content"
    	    
    	        android:layout_height="wrap_content"
    	        android:text="Club Details"
    	        android:layout_marginLeft="4dp"
    	        android:layout_marginRight="4dp"
    	        android:textSize="20sp"
    	        android:textColor="#000000" />

    	    <TextView
    	        android:id="@+id/LINE"
    	        android:layout_width="60dp"
    	        android:layout_height="5dp"
    	         android:layout_weight="5.29"
    	        android:layout_alignParentLeft="true"
    	        android:layout_below="@+id/textView2"
    	        android:drawableBottom="@drawable/line"
    	        android:textColor="#FF0000" />
    	</LinearLayout>
    	<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp"

      android:background="@drawable/curve">

    	<EditText
    	    android:id="@+id/clubID"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/textView4"
    	    android:layout_marginLeft="8dp"
    	    android:layout_marginRight="5dp"
    	    android:layout_marginTop="15dp"
    	    android:layout_weight="0.53"
    	    android:background="#FFFFFF"
    	    android:drawableLeft="@drawable/id"
    	    android:ellipsize="end"
    	    android:ems="10"
    	    android:gravity="center"
    	    android:hint="  Enter Club Id   "
    	    android:paddingLeft="8dp"
    	    android:paddingRight="45dp"
    	    android:textColor="#772432" />

    	<ImageButton
    	    android:id="@+id/imageButton1"
    	    android:layout_width="wrap_content"
    	    android:layout_height="match_parent"
    	    android:layout_marginBottom="6dp"
    	    android:layout_marginLeft="230dp"
    	    android:layout_marginRight="8dp"
    	    android:layout_marginTop="6dp"
    	    android:background="@drawable/curve1"
    	    android:clickable="true"
    	    android:src="@drawable/greysearch" />

    	</FrameLayout>
    	<EditText android:layout_width="match_parent" 
    	    android:id="@+id/country"
    	     android:layout_height="40dp" 
    	     android:layout_alignParentLeft="true" 
    	     android:layout_below="@+id/editText1"     
    	     android:drawableLeft="@drawable/country"
    	     android:layout_marginTop="10dp" 
    	      android:layout_weight="0.53" 
    	      android:background="@drawable/shape" 
    	      android:ellipsize="end"
    	          android:textColor="#772432"
    	       android:ems="10" 
    	       android:gravity="center"
    	        android:hint="Country" 
    	        android:paddingLeft="8dp" 
    	        android:paddingRight="45dp"
    	        android:enabled="false"/>
    	
    	
    	
      <EditText android:layout_width="match_parent"   
          android:enabled="false"
          android:textColor="#772432" android:id="@+id/state" android:layout_height="40dp" android:layout_alignParentLeft="true" android:layout_below="@+id/editText1" android:layout_marginTop="10dp" android:layout_weight="0.53" android:background="@drawable/shape"      android:drawableLeft="@drawable/state" android:ellipsize="end" android:ems="10" android:gravity="center" android:hint=" State" android:paddingLeft="8dp"   android:paddingRight="45dp">

          <requestFocus android:layout_width="wrap_content" />

      </EditText>

 
      
      <EditText android:layout_width="match_parent"
             android:textColor="#772432"
           android:id="@+id/city"
           android:drawableLeft="@drawable/city"
            android:layout_height="40dp" 
            android:layout_alignParentLeft="true"
             
             android:layout_below="@+id/editText1" 
             android:layout_marginTop="10dp" 
             android:layout_weight="0.53" 
             android:background="@drawable/shape" 
             android:ellipsize="end" 
             android:enabled="false"
             android:ems="10" android:gravity="center" android:hint=" City" android:paddingLeft="6dp"   android:paddingRight="50dp"/>
      <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
          <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical"></LinearLayout>
        </LinearLayout>
      <EditText android:layout_width="match_parent"
             android:textColor="#772432"
           android:id="@+id/clubname"
           android:drawableLeft="@drawable/name"
            android:layout_height="40dp" 
            android:layout_alignParentLeft="true"
             
             android:layout_below="@+id/editText1" 
             android:layout_marginTop="10dp" 
             android:layout_weight="0.53" 
             android:background="@drawable/shape" 
             android:ellipsize="end" 
          android:enabled="false"
             android:ems="10" android:gravity="center" android:hint=" Name" android:paddingLeft="6dp"   android:paddingRight="50dp"/>
           <RelativeLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
         
         >
     
      <Button android:id="@+id/register"
           android:layout_width="fill_parent"
            android:layout_height="40dp"
             android:layout_gravity="center"
            
              android:layout_marginTop="10dp"
               android:layout_weight="0.51" 
               android:background="#004165" 
               android:text="REGISTER" 
               android:textColor="#FFFFFF" 
               android:textSize="18sp"
            />

      <ProgressBar
          android:id="@+id/progressBar2"
          style="?android:attr/progressBarStyleLarge"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true" />
  
       </RelativeLayout>
 
         </LinearLayout>
         </ScrollView>
         </LinearLayout>