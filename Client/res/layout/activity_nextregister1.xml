<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:orientation="vertical"
     android:paddingTop="10dp"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
     android:paddingBottom="10dp"
       android:background="#772432"
       >
       <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
        
                android:src="@drawable/logo_big"
            
                android:layout_gravity="center"
         
              />
      
         <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
  <LinearLayout
        
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
      android:layout_marginTop="5dp"
      android:background="@drawable/linearlayoutcurve"
           android:padding="10dp"
           android:layout_marginBottom="10dp"
       >
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"  android:layout_marginTop="5dp" android:background="@drawable/linearlayoutcurve" android:orientation="vertical" android:padding="10dp">

    	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:layout_marginTop="5dp"
    	    android:background="@drawable/linearlayoutcurve"
    	    android:orientation="horizontal"
    	    android:padding="5dp" >

    	    <TextView
    	        android:id="@+id/LINE"
    	        android:layout_width="60dp"
    	        android:layout_height="5dp"
    	        android:layout_alignParentLeft="true"
    	        android:layout_below="@+id/textView2"
    	        android:layout_weight="5.29"
    	        android:drawableBottom="@drawable/line"
    	        android:textColor="#FF0000" />

    	    <TextView
    	        android:id="@+id/contactdetail"
    	        android:layout_width="wrap_content"
    	    
    	        android:layout_height="wrap_content"
    	        android:text="Contact Details"
    	        android:layout_marginLeft="4dp"
    	        android:layout_marginRight="4dp"
    	        android:textSize="20sp"
    	        android:textColor="#000000" />

    	    <TextView
    	        android:id="@+id/LINE"
    	        android:layout_width="60dp"
    	        android:layout_height="5dp"
    	         android:layout_weight="5.29"
    	        android:layout_alignParentLeft="true"
    	        android:layout_below="@+id/textView2"
    	        android:drawableBottom="@drawable/line"
    	        android:textColor="#FF0000" />
    	</LinearLayout>
       

    

       <TextView
           android:id="@+id/LINE"
           android:layout_width="wrap_content"
           android:layout_height="5dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/textView2"
           android:drawableBottom="@drawable/line"
           android:textColor="#FF0000"
           />
       
       <EditText
           android:id="@+id/clientid"
           android:layout_width="match_parent"
         android:layout_height="50dp" 
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
             android:drawableLeft="@drawable/id"
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
     android:paddingRight="45dp"
           android:ems="10"
           android:hint=" Client Id"
                android:textColor="#772432"
           android:layout_weight="1"
            />
       
       <EditText
           android:id="@+id/mail"
           android:layout_width="match_parent"
         android:layout_height="50dp" 
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
             android:drawableLeft="@drawable/mail"
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
     android:paddingRight="45dp"
           android:ems="10"
           android:hint=" Mail"
                android:textColor="#772432"
           android:layout_weight="1"
            />
       <EditText
           android:id="@+id/phone"
           android:layout_width="match_parent"
          android:layout_height="50dp" 
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
            android:drawableLeft="@drawable/contact"
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
    android:paddingRight="45dp"
           android:textColor="#772432"
           android:ems="10"
           android:hint=" Phone"
           android:inputType="phone"
           android:layout_weight="1"
            />
       <Button
             android:id="@+id/NextButton"
             android:layout_width="fill_parent"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:layout_marginTop="34dp"
             android:layout_weight="0.51"
             android:background="#004165"
             android:text="NEXT"
             android:textColor="#FFFFFF"
             android:textSize="18sp" 
             android:layout_marginBottom="70dp"/>
  
 

       
     </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>