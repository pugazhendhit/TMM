
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:orientation="vertical"
     android:paddingTop="10dp"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
     android:paddingBottom="10dp"
       android:background="#772432"
       >
       <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:src="@drawable/logo_big"
                android:layout_gravity="center"
         
              />
      
         <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
  <LinearLayout
        
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
      android:layout_marginTop="15dp"
      android:background="@drawable/linearlayoutcurve"
           android:padding="10dp"
           android:layout_marginBottom="10dp"
       >

    
 
  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="10dp" android:layout_marginTop="15dp" android:background="@drawable/linearlayoutcurve" android:orientation="vertical" android:padding="10dp">

    	<LinearLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
    	    android:layout_marginTop="10dp"
    	    android:background="@drawable/linearlayoutcurve"
    	    android:orientation="horizontal"
    	    android:padding="10dp" >

    	    <TextView
    	        android:id="@+id/LINE"
    	        android:layout_width="60dp"
    	        android:layout_height="5dp"
    	        android:layout_alignParentLeft="true"
    	        android:layout_below="@+id/textView2"
    	        android:layout_weight="5.29"
    	        android:drawableBottom="@drawable/line"
    	        android:textColor="#FF0000" />

    	    <TextView
    	        android:id="@+id/location"
    	        android:layout_width="wrap_content"
    	    
    	        android:layout_height="wrap_content"
    	        android:text="Location"
    	        android:layout_marginLeft="4dp"
    	        android:layout_marginRight="4dp"
    	        android:textSize="20sp" />

    	    <TextView
    	        android:id="@+id/LINE"
    	        android:layout_width="60dp"
    	        android:layout_height="5dp"
    	         android:layout_weight="5.29"
    	        android:layout_alignParentLeft="true"
    	        android:layout_below="@+id/textView2"
    	        android:drawableBottom="@drawable/line"
    	        android:textColor="#FF0000" />
    	</LinearLayout>

    	<EditText android:layout_width="match_parent" 
    	    android:id="@+id/country"
    	     android:layout_height="40dp" 
    	     android:layout_alignParentLeft="true" 
    	     android:layout_below="@+id/editText1"     
    	     android:drawableLeft="@drawable/country"
    	     android:layout_marginTop="20dp" 
    	      android:layout_weight="0.53" 
    	      android:background="@drawable/shape" 
    	      android:ellipsize="end"
    	          android:textColor="#772432"
    	       android:ems="10" 
    	       android:gravity="center"
    	        android:hint="Country" 
    	        android:paddingLeft="8dp" 
    	        android:paddingRight="45dp"/>
      <EditText android:layout_width="match_parent"   android:textColor="#772432" android:id="@+id/state" android:layout_height="40dp" android:layout_alignParentLeft="true" android:layout_below="@+id/editText1" android:layout_marginTop="10dp" android:layout_weight="0.53" android:background="@drawable/shape"      android:drawableLeft="@drawable/state" android:ellipsize="end" android:ems="10" android:gravity="center" android:hint=" State" android:paddingLeft="8dp"   android:paddingRight="45dp">

          <requestFocus android:layout_width="wrap_content" />

      </EditText>
      
      <EditText android:layout_width="match_parent"
             android:textColor="#772432"
           android:id="@+id/city"
           android:drawableLeft="@drawable/city"
            android:layout_height="40dp" 
            android:layout_alignParentLeft="true"
             
             android:layout_below="@+id/editText1" 
             android:layout_marginTop="10dp" 
             android:layout_weight="0.53" 
             android:background="@drawable/shape" 
             android:ellipsize="end" 
             android:ems="10" android:gravity="center" android:hint=" City" android:paddingLeft="6dp"   android:paddingRight="50dp"/>
      <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
          <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical"></LinearLayout>
        </LinearLayout>
       
          <RelativeLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center">
     
      <Button android:id="@+id/register"
           android:layout_width="fill_parent"
            android:layout_height="40dp"
             android:layout_gravity="center"
            
              android:layout_marginTop="24dp"
               android:layout_weight="0.51" 
               android:background="#004165" 
               android:text="REGISTER" 
               android:textColor="#FFFFFF" 
               android:textSize="18sp"/>

      <ProgressBar
          android:id="@+id/progressBar2"
          style="?android:attr/progressBarStyleLarge"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true" />
  
       </RelativeLayout>
 

       </LinearLayout>

      <!--<ProgressBar
           android:id="@+id/progressBar2"
           style="?android:attr/progressBarStyleLarge"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/RegisterButton"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="82dp" />  --> 

      
</LinearLayout>
  </ScrollView>
</LinearLayout>
    
  
   
  
   