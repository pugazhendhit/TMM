<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
      
       android:layout_width="fill_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#004165"
  android:padding="10dp"
       
       >
       
     <LinearLayout
      
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical"
        android:background="#FFFFFF"
android:padding="10dp"
       
       >
    
       

      <TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
          android:textSize="30sp"
            android:textColor="#772432"
          android:layout_marginTop="60dp"
   	android:gravity="center"
   	android:paddingLeft="8dp"
   	android:paddingRight="8dp"
           android:ems="10"
           android:text="Role Taker"
           android:inputType="phone"/>

<TextView
           android:id="@+id/LINE1"
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="3dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/textView2"
           android:drawableBottom="@drawable/line"
           android:textColor="#004165"
            android:background="#004165" />
 <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">   

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="296dp"
             android:background="#FFFFFF"
             android:orientation="vertical"
             android:padding="10dp" >

       <EditText
           android:id="@+id/master"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
               android:textColor="#772432"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
           
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
   	android:paddingRight="8dp"
           android:ems="10"
           android:hint=" Master Of Ceremony"
          android:layout_weight="1"
          />
       <EditText
           android:id="@+id/general"
           android:layout_width="match_parent"
           android:layout_height="40dp"
               android:textColor="#772432"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
           
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
   	android:paddingRight="8dp"
           android:ems="10"
           android:hint="  General Evaluator"
          android:layout_weight="1"
          />
        
  <EditText
           android:id="@+id/timer"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
               android:textColor="#772432"
           
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
   	android:paddingRight="8dp"
           android:ems="10"
           android:hint=" Timer"
          android:layout_weight="1"
          />
       <EditText
           android:id="@+id/counter"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_alignParentLeft="true"
               android:textColor="#772432"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
           
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
   	android:paddingRight="8dp"
           android:ems="10"
           android:hint=" Ah Counter"
           android:inputType="phone"
           android:layout_weight="1"
            />
       
       <EditText
           android:id="@+id/grammarian"
               android:textColor="#772432"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/editText1"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape"
           
            android:ellipsize="end"
   	android:gravity="center"
   	android:paddingLeft="8dp"
   	android:paddingRight="8dp"
           android:ems="10"
           android:hint=" Grammarian"
           android:inputType="textPassword" 
           android:layout_weight="1"
           />

       <Button
             android:id="@+id/NextButton"
             android:layout_width="fill_parent"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:layout_marginTop="50dp"
             android:layout_weight="0.51"
             android:background="#004165"
             android:text="NEXT"
             android:textColor="#FFFFFF"
             android:textSize="18sp" 
             android:layout_marginBottom="30dp"/>

 
       </LinearLayout>
       </ScrollView>
       </LinearLayout>
       </LinearLayout>
       
    